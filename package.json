{
    "type": "module",
    "scripts": {
        "dev": "vite dev --open",
        "build": "vite build",
        "preview": "vite preview",
        "postinstall": "symlink-dir ./node_modules/uikit ./static/assets/uikit && cd ./static/assets/uikit && pnpm install",
        "compile": "pnpm compile-less && pnpm compile-uikit-tests",
        "compile-less": "make-dir static/css && lessc less/theme.less > static/css/theme.css --rewrite-urls=all --clean-css",
        "compile-uikit-tests": "cd ./static/assets/uikit && pnpm compile-js tests"
    },
    "packageManager": "pnpm@9.9.0",
    "devDependencies": {
        "@docsearch/css": "^3.8.2",
        "@docsearch/js": "^3.8.2",
        "@eslint/js": "^9.17.0",
        "@sveltejs/adapter-static": "3.0.8",
        "@sveltejs/kit": "^2.15.1",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "clipboard": "2.0.11",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.46.1",
        "execa": "^9.5.2",
        "github-slugger": "^2.0.0",
        "globals": "^15.14.0",
        "highlight.js": "11.11.1",
        "less": "^4.2.1",
        "less-plugin-clean-css": "^1.6.0",
        "make-dir-cli": "^4.0.0",
        "marked": "^15.0.4",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-svelte": "^3.3.2",
        "svelte": "^5.16.0",
        "symlink-dir": "^6.0.4",
        "uikit": "3.21.16",
        "vite": "^6.0.6"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search"
            ]
        }
    }
}
