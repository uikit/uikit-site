{
    "type": "module",
    "scripts": {
        "dev": "vite dev --open",
        "build": "vite build",
        "preview": "vite preview",
        "postinstall": "symlink-dir ./node_modules/uikit ./static/assets/uikit && cd ./static/assets/uikit && pnpm install",
        "compile": "pnpm compile-less && pnpm compile-uikit-tests",
        "compile-less": "make-dir static/css && lessc less/theme.less > static/css/theme.css --rewrite-urls=all --clean-css",
        "compile-uikit-tests": "cd ./static/assets/uikit && pnpm compile-js tests"
    },
    "packageManager": "pnpm@9.9.0",
    "devDependencies": {
        "@docsearch/css": "^3.6.2",
        "@docsearch/js": "^3.6.2",
        "@eslint/js": "^9.12.0",
        "@sveltejs/adapter-static": "3.0.5",
        "@sveltejs/kit": "^2.7.0",
        "@sveltejs/vite-plugin-svelte": "^3.1.2",
        "clipboard": "2.0.11",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.44.1",
        "execa": "^9.4.0",
        "github-slugger": "^2.0.0",
        "globals": "^15.11.0",
        "highlight.js": "11.10.0",
        "less": "^4.2.0",
        "less-plugin-clean-css": "^1.6.0",
        "make-dir-cli": "^4.0.0",
        "marked": "^14.1.2",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-svelte": "^3.2.7",
        "svelte": "^4.2.19",
        "symlink-dir": "^6.0.2",
        "uikit": "3.21.13",
        "vite": "^5.4.9"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search"
            ]
        }
    }
}
