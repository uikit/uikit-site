{
    "type": "module",
    "scripts": {
        "dev": "vite dev --open",
        "build": "vite build",
        "preview": "vite preview",
        "postinstall": "symlink-dir ./node_modules/uikit ./static/assets/uikit && cd ./static/assets/uikit && pnpm install",
        "compile": "pnpm compile-less && pnpm compile-uikit-tests",
        "compile-less": "make-dir static/css && lessc less/theme.less > static/css/theme.css --rewrite-urls=all --clean-css",
        "compile-uikit-tests": "cd ./static/assets/uikit && pnpm compile-js tests"
    },
    "packageManager": "pnpm@10.8.0",
    "devDependencies": {
        "@docsearch/css": "^3.9.0",
        "@docsearch/js": "^3.9.0",
        "@eslint/js": "^9.28.0",
        "@sveltejs/adapter-static": "3.0.8",
        "@sveltejs/kit": "^2.21.3",
        "@sveltejs/vite-plugin-svelte": "^5.1.0",
        "clipboard": "2.0.11",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-svelte": "^3.9.1",
        "execa": "^9.6.0",
        "github-slugger": "^2.0.0",
        "globals": "^16.2.0",
        "highlight.js": "11.11.1",
        "less": "^4.3.0",
        "less-plugin-clean-css": "^1.6.0",
        "make-dir-cli": "^4.0.0",
        "marked": "^15.0.12",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-svelte": "^3.4.0",
        "svelte": "^5.33.18",
        "symlink-dir": "^6.0.5",
        "uikit": "3.23.9",
        "vite": "^6.3.5"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search"
            ]
        }
    }
}
