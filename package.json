{
    "type": "module",
    "scripts": {
        "dev": "vite dev --open",
        "build": "vite build",
        "preview": "vite preview",
        "postinstall": "symlink-dir ./node_modules/uikit ./static/assets/uikit && cd ./static/assets/uikit && pnpm install",
        "compile": "pnpm compile-less && pnpm compile-uikit-tests",
        "compile-less": "make-dir static/css && lessc less/theme.less > static/css/theme.css --rewrite-urls=all --clean-css",
        "compile-uikit-tests": "cd ./static/assets/uikit && pnpm compile-js tests"
    },
    "packageManager": "pnpm@10.16.1",
    "devDependencies": {
        "@docsearch/css": "^3.9.0",
        "@docsearch/js": "^3.9.0",
        "@eslint/js": "^9.39.2",
        "@sveltejs/adapter-static": "3.0.10",
        "@sveltejs/kit": "^2.49.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "clipboard": "2.0.11",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.14.0",
        "execa": "^9.6.1",
        "github-slugger": "^2.0.0",
        "globals": "^17.0.0",
        "highlight.js": "11.11.1",
        "less": "^4.5.1",
        "less-plugin-clean-css": "^1.6.0",
        "make-dir-cli": "^4.0.0",
        "marked": "^17.0.1",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.46.3",
        "symlink-dir": "^7.1.0",
        "uikit": "3.25.5",
        "vite": "^7.3.1"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search"
            ]
        }
    }
}
